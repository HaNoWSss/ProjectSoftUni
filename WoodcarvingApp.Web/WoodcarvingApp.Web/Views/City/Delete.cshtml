@model WoodcarvingApp.Web.ViewModels.City.CityDeleteViewModel

@{
    ViewData["Title"] = "Delete City";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete City</h1>
    <p>Are you sure you want to delete this city?</p>

    <div class="card mb-4">
        <div class="card-body text-center">
            <img src="@Model.ImageUrl" alt="@Model.CityName" class="img-fluid rounded mb-3" style="width: 150px;">
            <h3>@Model.CityName</h3>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
