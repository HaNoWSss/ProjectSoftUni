@model WoodcarvingApp.Web.ViewModels.City.CityDetailsViewModel

@{
    ViewData["Title"] = $"{Model.CityName} Details";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">@Model.CityName</h1>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.CityName" class="img-fluid mb-3" style="max-height: 300px;" />
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <h3>Woodcarvers</h3>
            <div class="row">
                @if (Model.Woodcarvers.Any())
                {
                    @foreach (var woodcarver in Model.Woodcarvers)
                    {
                        <div class="col-6 mb-3">
                            <div class="card">
                                <img src="@woodcarver.ImageUrl" alt="@woodcarver.FullName" class="card-img-top img-fluid" style="max-height: 200px;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@woodcarver.FullName</h5>
                                    <a asp-controller="Woodcarver" asp-action="Details" asp-route-id="@woodcarver.Id" class="btn btn-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No woodcarvers residing in this city.</p>
                }
            </div>
        </div>

        <div class="col-md-6">
            <h3>Exhibitions</h3>
            <div class="row">
                @if (Model.Exhibitions.Any())
                {
                    @foreach (var exhibition in Model.Exhibitions)
                    {
                        <div class="col-6 mb-3">
                            <div class="card">
                                <img src="@exhibition.ImageUrl" alt="@exhibition.Name" class="card-img-top img-fluid" style="max-height: 200px;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@exhibition.Name</h5>
                                    <a asp-controller="Exhibition" asp-action="Details" asp-route-id="@exhibition.Id" class="btn btn-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No exhibitions currently available in this city.</p>
                }
            </div>
        </div>
    </div>
</div>
