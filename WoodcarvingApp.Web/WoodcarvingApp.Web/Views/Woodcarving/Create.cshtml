@model WoodcarvingApp.Web.ViewModels.Woodcarving.WoodcarvingCreateViewModel
@{
    ViewData["Title"] = "Add Woodcarving";
}

<div class="container mt-4">
    <h1 class="text-center">Add New Woodcarving</h1>

    <form asp-action="Create" asp-controller="Woodcarving" method="post" enctype="multipart/form-data" class="mt-4">
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter woodcarving title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WoodcarverId" class="form-label">Select Woodcarver</label>
            <select asp-for="WoodcarverId" class="form-control" asp-items="@Model.WoodcarverList">
            </select>
            <span asp-validation-for="WoodcarverId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WoodTypeId" class="form-label">Select Wood Type</label>
            <select asp-for="WoodTypeId" class="form-control" asp-items="@Model.WoodTypeList">
                <option value="">Select Wood Type...</option>
            </select>
            <span asp-validation-for="WoodTypeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" type="url" placeholder="Enter image URL" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" id="IsAvailable" />
            <label asp-for="IsAvailable" class="form-check-label">Available for Sale</label>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success">Add Woodcarving</button>
            <a asp-action="Index" asp-controller="Woodcarving" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
