@model WoodcarvingApp.Web.ViewModels.Woodcarving.WoodcarvingDeleteViewModel

@{
    ViewData["Title"] = "Delete Woodcarving";
}

<div class="container mt-4">
    <h1 class="text-center text-danger">Delete Woodcarving</h1>
    <p class="text-center">
        Are you sure you want to delete the following woodcarving?
    </p>

    <div class="text-center mb-4">
        <h2>@Model.Title</h2>
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" style="max-height: 300px;" />
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
