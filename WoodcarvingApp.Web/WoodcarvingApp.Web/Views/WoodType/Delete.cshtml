@model WoodcarvingApp.Web.ViewModels.WoodType.WoodTypeDeleteViewModel

@{
    ViewData["Title"] = "Delete Wood Type";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Wood Type</h1>
    <p>Are you sure you want to delete this wood type?</p>

    <div class="card mb-4">
        <div class="card-body text-center">
            <img src="@Model.ImageUrl" alt="@Model.WoodTypeName" class="img-fluid rounded mb-3" style="width: 150px;">
            <h3>@Model.WoodTypeName</h3>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
