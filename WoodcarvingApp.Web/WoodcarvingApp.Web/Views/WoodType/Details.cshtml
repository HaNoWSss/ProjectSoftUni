@model WoodcarvingApp.Web.ViewModels.WoodType.WoodTypeDetailsViewModel

@{
    ViewData["Title"] = "Wood Type Details";
}

<div class="container mt-4">
    <h1 class="text-center">Wood Type Details</h1>

    <div class="row mt-4">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.WoodTypeName" />
        </div>
        <div class="col-md-8">
            <h2>@Model.WoodTypeName</h2>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Hardness:</strong> @Model.Hardness</p>
            <p><strong>Color:</strong> @Model.Color</p>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</div>
